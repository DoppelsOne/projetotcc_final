// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Usuario {
  id       Int        @id @default(autoincrement())
  name     String
  email    String
  login    String
  password String
  bairro   String
  endereco String
  numero   String
  cep      String
  tel      String
  postagem Postagem[]
}

model Postagem {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String?
  subtitle  String?
  value     Float
  troca     Boolean  @default(true)
  image     String?
  autorId   Int
  autor     Usuario  @relation(fields: [autorId], references: [id])
  plantaId  Int
  planta    Planta   @relation(fields: [plantaId], references: [id])

}

model Planta {
  id        Int        @id @default(autoincrement())
  name      String
  descricao String?
  posts     Postagem[]
}
