generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  login    String
  password String
  locale   String
  tel      String
  postagem Post[]


  @@map("Usu√°rio")
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  subtitle  String
  value     Float
  published Boolean @default(true)
  image     String
  authorId  Int
  author    User    @relation(fields: [authorId], references: [id])
  planta    Plant[] @relation(references: [id])

  @@map("Postagem")
}

model Plant {
  id    Int    @id @default(autoincrement())
  name  String
  posts Post[] @relation(references: [id])
  @@map("Planta")
}
