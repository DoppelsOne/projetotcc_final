generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Planta {
  id        Int                   @id @default(autoincrement())
  name      String
  descricao String?
  Postagem  Postagem[]
  Categoria CategoriaController[]
}

model Postagem {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  title     String?
  subtitle  String?
  value     Float
  troca     Boolean  @default(true)
  image     String?
  valor     Float
  autorId   Int
  plantaId  Int
  imagemId  Int
  Usuario   Usuario  @relation(fields: [autorId], references: [id])
  Planta    Planta   @relation(fields: [plantaId], references: [id])

  Imagem Imagem[]
}

model Usuario {
  id         Int        @id @default(autoincrement())
  email      String     @unique
  login      String
  senha      String
  avatar     String?
  tel        String
  Postagem   Postagem[]
  Endereco   U_endereco @relation(fields: [EnderecoId], references: [id])
  EnderecoId Int
}

model U_endereco {
  id       Int       @id @default(autoincrement())
  bairro   String?
  endereco String?
  cidade   String?
  uf       String?
  cep      String    @unique
  Usuario  Usuario[]
}

model Imagem {
  id         Int      @id @default(autoincrement())
  uri        String
  Imagem     Postagem @relation(references: [id], fields: [postagemId])
  postagemId Int
}

model Categorias {
  id        Int                   @id @default(autoincrement())
  categoria String                @unique
  plantas   CategoriaController[]
}

model CategoriaController {
  planta     Planta     @relation(fields: [plantaId], references: [id])
  plantaId   Int
  category   Categorias @relation(fields: [categoryId], references: [id])
  categoryId Int

  @@id([plantaId, categoryId])
}
